<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 日志输出根路径，可根据需求修改 -->
    <property name="LOG_PATH" value="D:/Work/java/springboot1/logs"/>
    <!-- 应用名称，用于日志文件名 -->
    <property name="APP_NAME" value="springboot1" />
    <!-- 统一日志输出格式，方便复用 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- 控制台输出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 所有日志按日期滚动输出到一个文件 -->
    <appender name="ALL_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 根日志配置，级别，输出到控制台和所有日志文件 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ALL_LOG_FILE" />
    </root>
</configuration>